<header class="header_auth text-center">
  <div class="row bg-danger line-top">
  </div>
  <div class="row mt-3">
    <h3 class="col-12 description-page mt-1">Entrar na conta</h3>
  </div>
</header>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>

        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions mt-3 mb-3">
          <%= f.button :submit, "Logar", class: "text-uppercase btn-lg col-12 btn-outline-danger" %>
        </div>

        <div class="form-row">
          <div class="text-center mt-2">
            <p class="fs-6 lh-sm"> Ainda nÃ£o tem cadastro?<%= link_to " Registrar-se.", new_partner_registration_path, class: "text-uppercase submit_auth" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

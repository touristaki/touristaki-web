<h1><%= t('.create_road_map') %></h1>

<%= simple_form_for [:partners, @road_map] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title,
                autofocus: true,
                input_html: { autocomplete: "title" }%>

    <%= f.file_field :apresentation %>
    <%= f.file_field :video_apresentation %>
    <%= f.label :description %>
    <%= f.text_field :description  %>
    <%= f.input :category_id, collection: Category.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Criar" %>
  </div>
<% end %>

<%= link_to "Voltar", partners_dashboard_path %>